---
import ProjectCard from "./ProjectCard";
import { t } from "@/i18n";

interface Project {
  title: string;
  description: string;
  image: string;
  tags: string[];
  link: string;
}

const projects: Project[] = [
  {
    title: t("projects.portfolio"),
    description: "Portfolio personnel développé avec Astro et React.",
    image: "https://images.unsplash.com/photo-1498050108023-c5249f4df085?q=80&w=1000&auto=format&fit=crop",
    tags: ["Astro", "React", "Tailwind CSS"],
    link: "https://github.com/username/portfolio"
  },
  {
    title: t("projects.dotfiles"),
    description: "Configuration personnelle pour Linux et développement.",
    image: "https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d?q=80&w=1000&auto=format&fit=crop",
    tags: ["Linux", "Shell", "Vim", "Tmux"],
    link: "https://github.com/username/dotfiles"
  },
  {
    title: t("projects.impact"),
    description: "Projet d'école avec intégration IA et analyse de données.",
    image: "https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?q=80&w=1000&auto=format&fit=crop",
    tags: ["Python", "TensorFlow", "Flask"],
    link: "https://github.com/username/impact"
  }
];
---

<section id="projects" class="container py-16 md:py-24 lg:py-32 bg-muted/10 rounded-lg">
  <div class="mx-auto flex max-w-5xl flex-col items-center justify-center space-y-6 text-center">
    <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl">{t("projects.title")}</h2>
    <p class="max-w-[700px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed">
      {t("hero.job_title")}
    </p>
  </div>
  <div class="mx-auto grid max-w-5xl grid-cols-1 gap-8 py-12 md:grid-cols-2 lg:grid-cols-3">
    {
      projects.map((project) => (
        <ProjectCard client:load project={project} />
      ))
    }
  </div>
</section> 