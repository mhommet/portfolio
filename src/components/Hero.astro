---
import HeroButtons from "./HeroButtons";
import HeroText from "./HeroText";
import RotatingSphere from "./RotatingSphere";
---





<section id="hero" class="w-full min-h-screen flex flex-col items-center justify-center overflow-hidden p-0 m-0">
  <div class="flex flex-col items-center justify-center w-full h-screen gap-10 pt-8">
    <div class="flex-shrink-0 flex items-center justify-center" style="width:420px;height:420px;max-width:90vw;max-height:70vh;">
      <RotatingSphere client:load />
    </div>
    <div class="flex flex-col items-center justify-center text-center">
      <HeroText client:load />
      <div class="mt-8 flex justify-center">
        <HeroButtons client:load />
      </div>
    </div>
  </div>
</section>