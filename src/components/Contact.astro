---
import ContactButtons from "./ContactButtons";
import { t } from "../i18n";
import ScrollAnimation from "./ScrollAnimation";

// Récupérer la langue depuis l'URL
const urlPathname = Astro.url.pathname;
const lang = urlPathname.startsWith('/en') ? 'en' : 'fr';
---

<section id="contact" class="container rounded-xl">
  <div class="mx-auto flex max-w-5xl flex-col items-center justify-center space-y-8 text-center">
    <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl md:text-6xl opacity-0">{t("contact.title", lang)}</h2>
  </div>
  <div class="mx-auto max-w-3xl items-center gap-8 py-16 text-center">
    <div class="flex flex-col gap-8 items-center animate-content opacity-0">
      <a href="mailto:milan.hommet@protonmail.com" class="text-2xl font-medium text-primary hover:underline transition-all transform hover:scale-105">
        milan.hommet@protonmail.com
      </a>
      <div class="mt-12">
        <h3 class="text-xl font-bold mb-4">{t("social.title", lang)}</h3>
        <p class="text-muted-foreground mb-6">
          {t("social.description", lang)}
        </p>
        <div class="flex justify-center">
          <ContactButtons client:load />
        </div>
      </div>
    </div>
  </div>
  <ScrollAnimation client:load sectionId="contact" />
</section> 