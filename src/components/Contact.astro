---
import ContactButtons from "./ContactButtons";
import { t } from "../i18n";

// Récupérer la langue depuis l'URL
const urlPathname = Astro.url.pathname;
const lang = urlPathname.startsWith('/en') ? 'en' : 'fr';
---

<section id="contact" class="container py-16 md:py-24 lg:py-32">
  <div class="mx-auto flex max-w-5xl flex-col items-center justify-center space-y-6 text-center">
    <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl">{t("contact.title", lang)}</h2>
    <p class="max-w-[700px] text-muted-foreground md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed">
      {t("contact.description", lang)}
    </p>
  </div>
  <div class="mx-auto max-w-3xl items-center gap-8 py-12 text-center">
    <div class="flex flex-col gap-6 items-center">
      <a href="mailto:milan.hommet@protonmail.com" class="text-xl font-medium text-primary hover:underline transition-all">
        milan.hommet@protonmail.com
      </a>
      <div class="mt-8">
        <h3 class="text-xl font-bold mb-4">{t("social.title", lang)}</h3>
        <p class="text-muted-foreground mb-6">
          {t("social.description", lang)}
        </p>
        <div class="flex justify-center">
          <ContactButtons client:load />
        </div>
      </div>
    </div>
  </div>
</section> 