---
import '../styles/global.css';

interface Props {
	title?: string;
}

const { title = "Portfolio Personnel" } = Astro.props;
---

<!doctype html>
<html lang="fr" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio personnel - Design moderne et élégant" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-background antialiased flex flex-col items-center">
		<div class="w-full max-w-[1400px]">
			<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}
</style>
